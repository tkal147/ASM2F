{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!
{% endblock %}

{% block body %}
	<div class="container">
		<h4>Class</h4>
		<a class="btn btn-outline-primary" href="{{ path('teacher_add') }}">ADD teacher</a>
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Age</th>
					<th scope="col">Location</th>
					<th scope="col">Manage</th>
				</tr>
			</thead>
			<tbody>
				{% for c in teacher %}
					<tr>

						<td>{{c.id}}</td>
						<td>{{c.name}}</td>
						<td>{{c.age}}</td>
                        <td>{{c.Location}}</td>
						<td>
							<a href="{{path('teacher_detail',{'id': c.id})}}" class="btn btn-success">detail</a>
							<a href="{{path('teacher_edit',{'id': c.id})}}" class="btn btn-success">Edit</a>
							<a href="{{path('teacher_delete',{'id': c.id})}}" class="btn btn-success">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
