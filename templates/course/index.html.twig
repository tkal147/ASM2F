{% extends 'base.html.twig' %}

{% block title %}Hello CourseController!
{% endblock %}

{% block body %}
	<div class="container">
		<h4>Course</h4>
		<a class="btn btn-outline-primary" href="{{ path('course_add') }}">ADD Course</a>
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Description</th>
					<th scope="col">Manage</th>
				</tr>
			</thead>
			<tbody>
				{% for c in courses %}
					<tr>

						<td>{{c.id}}</td>
						<td>{{c.name}}</td>
						<td>{{c.description}}</td>
						<td>
							<a href="{{path('course_detail',{'id': c.id})}}" class="btn btn-success">detail</a>
							<a href="{{path('course_edit',{'id': c.id})}}" class="btn btn-success">Edit</a>
							<a href="{{path('course_delete',{'id': c.id})}}" class="btn btn-success">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
